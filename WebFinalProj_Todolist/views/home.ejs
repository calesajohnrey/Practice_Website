<html>

<head>
  <title>

    <%= tittle %>

  </title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
  <link rel="stylesheet" href="./style.css" </head>

<body>
  <h1 align="center" style="color: rgb(255, 255, 255); text-shadow: 4px 1.5px darkkhaki; font-size:40px">What's Up, Enrique!</h1><br>
  <div class="container-fluid">
    
    <div class="row">
      <div class="col-4" style="background-color:darkkhaki;"><br><br>
        <h1 align="center">Add new task</h1>
        <form action="/create-task" method="POST">
            <tbody>
              <div class="left">
                <tr>
                  <th>Add Tasks: </th>
                  <td> 
                    <div class="input-block">
                      <input type="text" name="description" id="input-text" required spellcheck="false">
                      <span class="placeholder">
                        What do you need to do?
                      </span>
                    </div>
                    </th>
                </tr>
              </div>
              <div class="left">
                <tr>
                  <th>Categories: </th>
                  <td> <select name="category" style="color: grey;" required>
                      <option>PERSONAL</option>
                      <option>WORK</option>
                      <option>SCHOOL</option>
                      <option>CLEANING</option>
                      <option>OTHER</option>  
                    </select></th>
                </tr>
              </div>
              <div class="left">
                <tr>
                  <th>Date:</th>
                  <td> <div class="datee">
                    <input type="date" name="date" style="color: grey;" required>
                  </div></th>
                </tr>
              </div>            
            </tbody>
          <div align="center"><input  type="submit" class="btn1 btn-secondary" id="add" value="ADD TASK"></th></div>
        </form>
      </div>
      <div class="col-7" style="background-color:rgb(255, 255, 255);">
        <div><br><br>
          <h1 align="center">ToDo Lists</h1>
          <form class="list" action="/delete-task" method="GET" id="toOverflow">
            <table class="table table-hover">
              <thead class="thead">
                <tr>
                  <th>Select</th>
                  <th>Task</th>
                  <th>Category</th>
                  <th>Due dated</th>
                </tr>
              </thead>
              <% for(let i of task) { %>
                <tr>
                <td> <input type="checkbox" name="<%= i._id %>"></td>
                  <td>
                    <p id="task-description" style="color:grey">
                      <%= i.description %>
                  </td>
                  <td>
                    <p id="task-category"></p> <%= i.category %>
                  </td>
                  <td>
                    <p id="due-date" style="color: grey;"> <%= i.date %>
                    </p>
                  </td>
                </tr>


                <% } %>




            </table>
            <div align="center"><input type="submit" class="btn btn-secondary" value="DELETE TASK">
              <br><br>
            </div>
          </form>


        </div>
      </div>

    </div>
  </div>
 
</body>

</html>